#!/bin/sh

sudo cp "nodestats-tomesh.py" "/opt/tomesh/nodestats-tomesh.py"
sudo cp "node-exporter-ubiquiti.service" /lib/systemd/system/node-exporter-ubiquiti.service
sudo systemctl enable node-exporter-ubiquiti.service
sudo systemctl start node-exporter-ubiquiti.service

echo Remember to edit /opt/tomesh/nodestats-tomesh.py if your equipment ip address is different then 192.168.1.20